{
  "extends": "./node_modules/gts/",
  "ignorePatterns": ["**/*.config.ts"],
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "extends": [
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 160,
            "ignoreComments": true
          }
        ]
      },
      "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
      }
    }
  ]
}
